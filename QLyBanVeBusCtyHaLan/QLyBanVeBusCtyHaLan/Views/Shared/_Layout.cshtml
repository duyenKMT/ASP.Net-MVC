<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản lý bán vé xe buýt</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <img src="~/Anh/logo-ha-lan.png" />

            </div>
           
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Theo dõi bán vé", "Index", "BaoCaoBanVe")</li>
                    <li>@Html.ActionLink("Nhân Viên", "Index", "NhanVien")</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "KhachHang")</li>
                    <li>@Html.ActionLink("Bảng loại vé", "Index", "LoaiVe")</li>
                    <li>@Html.ActionLink("Vé tháng", "Index", "VeThang")</li>
                    <li>@Html.ActionLink("Tuyến xe", "Index", "TuyenXe")</li>
                    <li>@Html.ActionLink("Quản lý trị hệ thống", "NguoiDung", "DangNhap")</li>
                    <li>@Html.ActionLink("Đăng xuất", "Index", "DangNhap")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Công ty cổ phần TM&DV Hà Lan</p>
            <p>&copy; Author: Trần Thị Duyên - K54KMT.01</p>
        </footer>
    </div>
         
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
