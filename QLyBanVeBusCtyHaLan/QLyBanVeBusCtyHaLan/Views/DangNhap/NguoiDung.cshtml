@model IEnumerable<QLyBanVeBusCtyHaLan.Models.NguoiDung>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Quản lý người dùng</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quyen.tenquyen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tennguoidung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tendangnhap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.matkhau)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quyen.tenquyen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tennguoidung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tendangnhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.matkhau)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
